<mjml>
  <mj-head>
    <mj-title>{{ 'emails.welcome.title' | translate }}</mj-title>
  </mj-head>
  <mj-body>
    <mj-section>
      <mj-column>
        <mj-text font-size="20px" color="#333">
          {{ 'emails.welcome.greeting' | translate: { name: name } }}
        </mj-text>
        <mj-text color="#555" font-size="16px">
          {{ 'emails.welcome.message' | translate }}
        </mj-text>
        <mj-button background-color="#4CAF50" color="white" href="{{ siteUrl }}">
          {{ 'emails.welcome.button' | translate }}
        </mj-button>
        <mj-text color="#666" font-size="14px">
          {{ 'emails.welcome.footer' | translate }}
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml> 