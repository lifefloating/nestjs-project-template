{
  "name": "nestjs-project-template",
  "version": "1.1.0",
  "description": "NestJS project structure template with best practices using Fastify, Prisma, MongoDB, and Bun",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build:nest": "nest build --builder swc",
    "format": "biome format --write .",
    "start": "bun run src/main.ts",
    "start:dev": "bun --watch run src/main.ts",
    "start:debug": "bun --inspect --watch run src/main.ts",
    "start:prod": "bun dist/main.js",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "prepare": "husky",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:cov": "bun test --coverage",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma db push --accept-data-loss",
    "prisma:migrate:deploy": "prisma db push",
    "prisma:migrate:reset": "prisma migrate reset",
    "prisma:studio": "prisma studio",
    "db:seed": "bun prisma/seed.ts",
    "db:reset": "bun run prisma:migrate:reset && bun run db:seed",
    "db:setup": "bun run prisma:generate && bun run prisma:migrate:deploy && bun run db:seed",
    "openapi:export": "curl -s http://localhost:7009/openapi.yaml > openapi/openapi.yaml && echo 'OpenAPI documentation exported from running server to openapi/ directory'"
  },
  "prisma": {
    "seed": "bun prisma/seed.ts"
  },
  "keywords": [],
  "author": {
    "name": "fuyou",
    "email": "imshuazi@126.com",
    "url": "https://github.com/lifefloating"
  },
  "license": "MIT",
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.775.0",
    "@aws-sdk/lib-storage": "^3.775.0",
    "@aws-sdk/s3-request-presigner": "^3.775.0",
    "@fastify/compress": "^8.0.1",
    "@fastify/cors": "^11.0.1",
    "@fastify/helmet": "^13.0.1",
    "@fastify/multipart": "^9.0.3",
    "@fastify/static": "^8.2.0",
    "@nestjs/common": "^11.0.12",
