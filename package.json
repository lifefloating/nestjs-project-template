    "@nestjs/core": "^11.0.12",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-fastify": "^11.0.12",
    "@nestjs/swagger": "^11.1.0",
    "@prisma/client": "^6.5.0",
    "@types/lodash": "^4.17.16",
    "ali-oss": "^6.22.0",
    "bcryptjs": "^3.0.2",
    "better-auth": "^1.2.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cos-nodejs-sdk-v5": "^2.14.7",
    "dayjs": "^1.11.13",
    "dotenv": "^17.0.0",
    "fastify": "^5.2.2",
